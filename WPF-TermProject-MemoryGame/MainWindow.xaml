<Window x:Class="WPF_TermProject_MemoryGame.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_TermProject_MemoryGame"
        mc:Ignorable="d"     
        ResizeMode="NoResize" 
        WindowStyle="None"
        WindowStartupLocation="CenterScreen"
        Title="MainWindow" Height="450" Width="800">

    <Window.Background>
        <ImageBrush ImageSource="/Images/background.jpg" Opacity="0.85"/>
    </Window.Background>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.5*"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <!--row0 title-->
        <StackPanel Grid.Row="0">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="MEMORY" FontSize="50" FontWeight="Heavy" Foreground="DeepSkyBlue"/>
                <TextBlock Text="MEMORY" FontSize="50" FontWeight="Heavy" Foreground="DeepSkyBlue" Margin="320,0,0,0"/>
            </StackPanel>
            <TextBlock Text="Matching Game" FontSize="40" FontWeight="DemiBold" Foreground="CadetBlue" HorizontalAlignment="Center"/>
        </StackPanel>

        <!--row1 combo box & button-->
        <StackPanel Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="Select game mode..."/>
            <ComboBox Name="cmbGameMode" 
                      Width="200" Height="35" 
                      Margin="0,0,0,10">
                
                <ComboBoxItem Content="Select game mode..." IsEnabled="False"/>
                <ComboBoxItem Content="2x2"/>
                <ComboBoxItem Content="4x4"/>
                <ComboBoxItem Content="6x6"/>
                <ComboBoxItem Content="8x8"/>
                <ComboBoxItem Content="10x10"/>
            </ComboBox>
            <TextBlock Text="Select player mode..."/>
            <ComboBox Name="cmbPlayerMode" 
                      Width="200" Height="35"
                      Margin="0,0,0,15">
                
                <ComboBoxItem Content="Select player mode..." IsEnabled="False"/>
                <ComboBoxItem Content="1 Player"/>
                <ComboBoxItem Content="2 Players"/>
            </ComboBox>
            <Button 
                Name="btnStart"
                Click="btnStart_Click"
                
                Margin="0,0,0,15"
                Width="200"
                Height="35"
                Content="Start Game"
                FontSize="18"
                Background="Transparent"
                BorderThickness="3"
                BorderBrush="LimeGreen"
                Foreground="LightGreen"               
            />
            <Button
                Name="btnQuit"
                Click="btnQuit_Click"
                
                Width="200"
                Height="35"
                Content="Quit"
                FontSize="18"
                Background="Transparent"
                BorderThickness="3"
                BorderBrush="IndianRed"
                Foreground="PaleVioletRed"
            />
        </StackPanel>
        
    </Grid>
</Window>